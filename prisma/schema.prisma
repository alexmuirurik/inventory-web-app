datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id             String          @id @default(auto()) @map("_id") @db.ObjectId
    name           String?
    email          String?         @unique
    emailVerified  DateTime?
    image          String?
    role           String          @default("owner")
    activeLocation String?         @db.ObjectId
    accounts       Account[]
    sessions       Session[]
    businesses     Business[]
    Authenticator  Authenticator[]
    createdAt      DateTime        @default(now())
    updatedAt      DateTime        @updatedAt
}

model Account {
    id                String   @id @default(auto()) @map("_id") @db.ObjectId
    userId            String   @db.ObjectId
    type              String
    provider          String
    providerAccountId String
    refresh_token     String?  @db.String
    access_token      String?  @db.String
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String?  @db.String
    session_state     String?
    createdAt         DateTime @default(now())
    updatedAt         DateTime @updatedAt
    user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(auto()) @map("_id") @db.ObjectId
    sessionToken String   @unique
    userId       String   @db.ObjectId
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt
}

model VerificationToken {
    id         String   @id @default(auto()) @map("_id") @db.ObjectId
    identifier String
    token      String
    expires    DateTime

    @@unique([identifier, token])
}

// Optional for WebAuthn support
model Authenticator {
    credentialID         String  @id @map("_id")
    userId               String  @db.ObjectId
    providerAccountId    String
    credentialPublicKey  String
    counter              Int
    credentialDeviceType String
    credentialBackedUp   Boolean
    transports           String?
    user                 User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([userId, credentialID])
}

model Business {
    id            String             @id @default(auto()) @map("_id") @db.ObjectId
    name          String
    mobile        String
    logo          String?
    subscription  String?
    ownerId       String             @db.ObjectId
    owner         User               @relation(fields: [ownerId], references: [id])
    subscriptions Subscription[]
    locations     BusinessLocation[]
    createdAt     DateTime           @default(now())
    updatedAt     DateTime           @updatedAt
}

model BusinessLocation {
    id         String      @id @default(auto()) @map("_id") @db.ObjectId
    businessId String      @db.ObjectId
    name       String
    country    String
    city       String
    address    String
    business   Business    @relation(fields: [businessId], references: [id])
    ctegories  Category[]
    products   Product[]
    sales      Sale[]
    orderLine  OrderLine[]
    stocks     Stock[]
    createdAt  DateTime    @default(now())
    updatedAt  DateTime    @updatedAt
}

model Subscription {
    id                 String   @id @default(auto()) @map("_id") @db.ObjectId
    businessId         String   @db.ObjectId
    amount             Float
    mobile             String
    type               String
    month              String
    year               String
    MerchantRequestID  String?
    CheckoutRequestID  String?
    MpesaReceiptNumber String?
    status             String
    business           Business @relation(fields: [businessId], references: [id])
    createdAt          DateTime @default(now())
    updatedAt          DateTime @updatedAt
}

model Category {
    id                 String           @id @default(auto()) @map("_id") @db.ObjectId
    businessLocationId String           @db.ObjectId
    name               String
    businessLocation   BusinessLocation @relation(fields: [businessLocationId], references: [id])
    products           Product[]
    createdAt          DateTime         @default(now())
    updatedAt          DateTime         @updatedAt
}

model Product {
    id                 String           @id @default(auto()) @map("_id") @db.ObjectId
    businessLocationId String           @db.ObjectId
    categoryId         String?          @db.ObjectId
    name               String
    units              String
    status             String
    businessLocation   BusinessLocation @relation(fields: [businessLocationId], references: [id])
    category           Category?        @relation(fields: [categoryId], references: [id])
    stocks             Stock[]
    orderLineItems     OrderLineItem[]
    saleItems          SaleItem[]
    createdAt          DateTime         @default(now())
    updatedAt          DateTime         @updatedAt
}

model Stock {
    id                 String           @id @default(auto()) @map("_id") @db.ObjectId
    productId          String           @db.ObjectId
    businessLocationId String           @db.ObjectId
    buyingPrice        Float?
    sellingPrice       Float?
    itemsCount         Float
    product            Product          @relation(fields: [productId], references: [id])
    businessLocation   BusinessLocation @relation(fields: [businessLocationId], references: [id])
    createdAt          DateTime         @default(now())
    updatedAt          DateTime         @updatedAt

    @@unique([productId, businessLocationId])
}

model OrderLine {
    id                 String           @id @default(auto()) @map("_id") @db.ObjectId
    businessLocationId String           @db.ObjectId
    businessLocation   BusinessLocation @relation(fields: [businessLocationId], references: [id])
    orderLineItems     OrderLineItem[]
    createdAt          DateTime         @default(now())
    updatedAt          DateTime         @updatedAt
}

model OrderLineItem {
    id           String    @id @default(auto()) @map("_id") @db.ObjectId
    orderLineId  String    @db.ObjectId
    productId    String    @db.ObjectId
    itemsCount   Float
    sellingPrice Float?
    orderLine    OrderLine @relation(fields: [orderLineId], references: [id])
    product      Product   @relation(fields: [productId], references: [id])
    createdAt    DateTime  @default(now())
    updatedAt    DateTime  @updatedAt
}

model Sale {
    id                 String           @id @default(auto()) @map("_id") @db.ObjectId
    businessLocationId String           @db.ObjectId
    businessLocation   BusinessLocation @relation(fields: [businessLocationId], references: [id])
    saleItems          SaleItem[]
    createdAt          DateTime         @default(now())
    updatedAt          DateTime         @updatedAt
}

model SaleItem {
    id         String   @id @default(auto()) @map("_id") @db.ObjectId
    productId  String   @db.ObjectId
    saleId     String   @db.ObjectId
    itemsCount Float
    product    Product  @relation(fields: [productId], references: [id])
    sale       Sale     @relation(fields: [saleId], references: [id])
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt
}
